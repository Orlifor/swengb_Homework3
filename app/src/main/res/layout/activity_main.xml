<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/futurabold"
        android:text="@string/login"
        android:textColor="@color/blackText"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/main_login_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:fontFamily="@font/futurabook"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:textColor="@color/blackText"
        app:layout_constraintEnd_toEndOf="@+id/main_login_text"
        app:layout_constraintStart_toStartOf="@+id/main_login_text"
        app:layout_constraintTop_toBottomOf="@+id/main_login_text" />

    <EditText
        android:id="@+id/main_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/password"
        android:fontFamily="@font/futurabook"
        android:textColor="@color/blackText"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/main_login_username"
        app:layout_constraintStart_toStartOf="@+id/main_login_username"
        app:layout_constraintTop_toBottomOf="@+id/main_login_username" />

    <Button
        android:id="@+id/main_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/futuramedium"
        android:text="@string/login"
        android:textColor="@color/blackText"
        app:layout_constraintEnd_toEndOf="@+id/main_login_password"
        app:layout_constraintStart_toStartOf="@+id/main_login_password"
        app:layout_constraintTop_toBottomOf="@+id/main_login_password" />

</androidx.constraintlayout.widget.ConstraintLayout>